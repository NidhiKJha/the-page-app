<h1>Some Of Our Favourites</h1>
<div class="tabs-collection">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">First Panel</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">Second Panel</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab" onclick="sos();">Third Panel</a>
        </li>
    </ul>
</div>

<!-- Tab panes -->
<div class="tab-content page-width" style="padding-top: 20px; margin-bottom: 60px;">
	<div class="tab-pane active" id="tabs-1" role="tabpanel">
        {% for block in section.blocks %}
            {%if block.type == 'collection' %}
                <div class="row js-mobile-tabs">
                {% assign block_collection = collections[block.settings.collection] %}
                    {%if forloop.index == 1 %}
                        {% for product in block_collection.products %}
                        <div class="col-xl-4  col-sm-12" id="column-boxes">
                            <div class="each-tab-card">
                                <div class="image-tabs-wrapper">
                                    <img src="{{product.featured_image.src | img_url: '420x'}}" />
                                </div>
                                <div class="content-tab-wrapper">
                                    <h3 class="content-heading">{{product.title}}</h3>
                                    <p class="content-paragraph">{{product.description}}</p>
                                </div>
                            </div>
                        </div>
                        {%endfor%}
                    {%endif%}
                </div>
            {%endif%}
        {%endfor%}
	</div>
	<div class="tab-pane" id="tabs-2" role="tabpanel">
